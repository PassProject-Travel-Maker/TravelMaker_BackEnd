<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.backend.domain.plan.mapper.DayMapper">
    <!-- 여행 계획 생성 -->
    <insert id="insertDay" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO day (num, plan_id) VALUES
        <foreach collection="list" item="day" separator=",">
            (#{day.num}, #{day.plan.id})
        </foreach>
    </insert>

    <select id="getDayDetailList" parameterType="long" resultType="com.ssafy.backend.domain.plan.dto.DayDto$DayDetailResponseDto">
        select
            day_id as id,
            num
        from
            day
        where
            plan_id = #{planId}
    </select>
</mapper>
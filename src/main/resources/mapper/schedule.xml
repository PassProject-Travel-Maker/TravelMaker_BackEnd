<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.backend.domain.plan.mapper.ScheduleMapper">
    <!-- Schedule 리스트 삽입 -->
    <insert id="insertSchedule" parameterType="java.util.List">
        INSERT INTO schedule (day_id, attraction_id, `order`) VALUES
        <foreach collection="list" item="schedule" separator=",">
            (#{schedule.day.id}, #{schedule.attraction.id}, #{schedule.order})
        </foreach>
    </insert>

    <select id="getScheduleDetailList" parameterType="long" resultType="com.ssafy.backend.domain.plan.dto.ScheduleDto$ScheduleDetailResponseDto">
        select
            schedule_id as id,
            `order` as orderIndex,
            day_id as day,
            attraction_id as attraction
        from
            schedule
        where
            day_id = #{dayId}
    </select>
</mapper>